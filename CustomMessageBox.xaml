<Window x:Class="LessonsManager.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="{Binding Title}" 
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <!-- Remove the WindowChrome line that was causing the error -->

    <Border Background="White" 
            CornerRadius="4"
            BorderThickness="1"
            BorderBrush="#DDDDDD"
            MinWidth="400"
            MaxWidth="500"
            Margin="16">
        <!-- Custom shadow effect instead of MaterialDesignElevationShadow4 -->
        <Border.Effect>
            <DropShadowEffect Color="#000000" 
                            Direction="270" 
                            ShadowDepth="4" 
                            BlurRadius="16" 
                            Opacity="0.3"/>
        </Border.Effect>

        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" 
                        Orientation="Horizontal" 
                        Margin="0,0,0,16">
                <materialDesign:PackIcon Kind="{Binding IconKind}" 
                                       Width="24" 
                                       Height="24" 
                                       VerticalAlignment="Center"
                                       Margin="0,0,8,0"
                                       Foreground="{StaticResource PrimaryBrush}"/>
                <TextBlock Text="{Binding Title}" 
                           FontSize="18"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"
                           Foreground="{StaticResource TextPrimary}"/>
            </StackPanel>

            <!-- Message -->
            <TextBlock Grid.Row="1" 
                       Text="{Binding Message}" 
                       TextWrapping="Wrap"
                       Margin="0,0,0,24"
                       FontSize="14"
                       Foreground="{StaticResource TextSecondary}"/>

            <!-- Buttons -->
            <StackPanel Grid.Row="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right">
                <Button x:Name="NoButton"
                        Content="לא"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Visibility="{Binding ShowNoButton, Converter={StaticResource BoolToVisibilityConverter}}"
                        Click="NoButton_Click"
                        Margin="8,0,0,0"
                        Padding="16,8"
                        MinWidth="80"/>

                <Button x:Name="YesButton"
                        Content="כן"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Click="YesButton_Click"
                        Margin="8,0,0,0"
                        Padding="16,8"
                        MinWidth="80"
                        Background="{StaticResource PrimaryBrush}"/>

                <Button x:Name="OkButton"
                        Content="אישור"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Visibility="{Binding ShowOkButton, Converter={StaticResource BoolToVisibilityConverter}}"
                        Click="OkButton_Click"
                        Margin="8,0,0,0"
                        Padding="16,8"
                        MinWidth="80"
                        Background="{StaticResource PrimaryBrush}"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
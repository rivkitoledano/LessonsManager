<Window x:Class="LessonsManager.AdminLoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:LessonsManager"
        mc:Ignorable="d"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Title="כניסת מנהל" 
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="{DynamicResource MaterialDesignPaper}">

    <Grid Width="Auto">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Modern Header with Window Controls -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}" Grid.ColumnSpan="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Back Button -->
                <Button x:Name="BackButton" 
                        Style="{StaticResource TextButton}"
                        Click="BackButton_Click"
                        Margin="16,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Foreground="White">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="ArrowRight" Width="20" Height="20" 
                                              VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="חזור" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <!-- App Title -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="ShieldAccount" Width="28" Height="28" 
                                          Foreground="White" Margin="0,0,10,0"/>
                    <TextBlock Text="כניסת מנהל" 
                               Foreground="White" 
                               FontSize="22" 
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Window Controls -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" 
                            VerticalAlignment="Center" Margin="0,0,10,0">
                    <Button x:Name="MinimizeButton" 
                            Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                            Click="MinimizeButton_Click"
                            ToolTip="מזער">
                        <materialDesign:PackIcon Kind="WindowMinimize" Width="20" Height="20" Foreground="White"/>
                    </Button>
                    <Button x:Name="CloseButton" 
                            Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                            Click="CloseButton_Click"
                            Margin="10,0,0,0"
                            ToolTip="סגור">
                        <materialDesign:PackIcon Kind="Close" Width="20" Height="20" Foreground="White"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content - Login Card -->
        <Border Grid.Row="1" 
                Style="{StaticResource ModernCard}"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                MaxWidth="450"
                Background="{DynamicResource MaterialDesignPaper}" Grid.Column="1" Width="478" RenderTransformOrigin="0.5,0.5" Height="436">
            <Border.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="0.161"/>
                    <RotateTransform/>
                    <TranslateTransform Y="0.597"/>
                </TransformGroup>
            </Border.RenderTransform>
            <StackPanel>
                <!-- Login Icon -->
                <Border Width="80" 
                        Height="80" 
                        CornerRadius="40" 
                        Background="{StaticResource PrimaryBrush}" 
                        Margin="0,0,0,24"
                        HorizontalAlignment="Center">
                    <materialDesign:PackIcon Kind="ShieldAccount" 
                                          Width="40" 
                                          Height="40" 
                                          Foreground="White"/>
                </Border>

                <!-- Title -->
                <TextBlock Text="התחברות מנהל" 
                           Style="{StaticResource H2}" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,24"/>

                <!-- Username Field -->
                <TextBlock Text="שם משתמש" 
                           Margin="0,0,0,4"
                           FontWeight="Medium"
                           FontSize="14"
                           Foreground="{DynamicResource MaterialDesignBody}" HorizontalAlignment="Right"/>

                <TextBox x:Name="UsernameTextBox" 
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         materialDesign:HintAssist.Hint="הזן שם משתמש"
                         materialDesign:HintAssist.HintOpacity=".56"
                         materialDesign:HintAssist.FloatingScale=".8"
                         FontSize="14"
                         Margin="0,0,0,16" TextChanged="UsernameTextBox_TextChanged">
                    <TextBox.Resources>
                        <Style TargetType="TextBlock" BasedOn="{x:Null}">
                            <Setter Property="HorizontalAlignment" Value="Right"/>
                            <Setter Property="TextWrapping" Value="NoWrap"/>
                            <Setter Property="FontSize" Value="14"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>

                <!-- Password Field -->
                <TextBlock Text="סיסמה" 
                           Margin="0,0,0,4"
                           FontWeight="Medium"
                           FontSize="14"
                           Foreground="{DynamicResource MaterialDesignBody}" HorizontalAlignment="Right"/>

                <PasswordBox x:Name="PasswordBox" 
                             Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                             materialDesign:HintAssist.Hint="הזן סיסמה"
                             materialDesign:HintAssist.HintOpacity=".56"
                             materialDesign:HintAssist.FloatingScale=".8"
                             FontSize="14"
                             Margin="0,0,0,24">
                    <PasswordBox.Resources>
                        <Style TargetType="TextBlock" BasedOn="{x:Null}">
                            <Setter Property="HorizontalAlignment" Value="Right"/>
                            <Setter Property="TextWrapping" Value="NoWrap"/>
                            <Setter Property="FontSize" Value="14"/>
                        </Style>
                    </PasswordBox.Resources>
                </PasswordBox>

                <!-- Login Button -->
                <Button x:Name="LoginButton" 
                        Content="התחבר" 
                        Style="{StaticResource PrimaryButton}"
                        Click="LoginButton_Click"
                        Height="48"
                        Margin="0,8,0,16">
                    <Button.Resources>
                        <Style TargetType="TextBlock">
                            <Setter Property="FontSize" Value="16"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <!-- Error Message -->
                <TextBlock x:Name="ErrorMessage" 
                           Foreground="{DynamicResource MaterialDesignValidationErrorBrush}"
                           TextWrapping="Wrap" 
                           TextAlignment="Center"
                           Margin="0,8,0,0"
                           FontSize="12"
                           Visibility="Collapsed"/>
            </StackPanel>
        </Border>

        <!-- Footer -->
        <Border Grid.Row="1" 
                Background="{DynamicResource MaterialDesignPaper}" 
                BorderThickness="0,1,0,0" 
                BorderBrush="{DynamicResource MaterialDesignDivider}"
                Padding="16,12" Grid.ColumnSpan="2" Margin="0,700,0,0" Grid.RowSpan="2">
            <TextBlock Text="הכנס פרטי מנהל כדי להמשיך • ברירת מחדל: 1 / 1" 
                       FontSize="12" 
                       HorizontalAlignment="Right" 
                       VerticalAlignment="Center"
                       Foreground="{DynamicResource MaterialDesignBody}" Margin="0,0,81,0"/>
        </Border>
    </Grid>
</Window>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">
    
    <!-- Font Families -->
    <FontFamily x:Key="PrimaryFontFamily">Segoe UI, Segoe UI Emoji, Segoe UI Symbol, -apple-system, BlinkMacSystemFont, Roboto, Helvetica Neue, Arial, sans-serif</FontFamily>
    <FontFamily x:Key="HebrewFontFamily">Segoe UI, Segoe UI Emoji, Segoe UI Symbol, -apple-system, BlinkMacSystemFont, Roboto, Helvetica Neue, Arial, sans-serif</FontFamily>
    
    <!-- Font Sizes -->
    <system:Double x:Key="DisplayLargeSize">32</system:Double>
    <system:Double x:Key="DisplayMediumSize">28</system:Double>
    <system:Double x:Key="DisplaySmallSize">24</system:Double>
    <system:Double x:Key="HeadlineLargeSize">22</system:Double>
    <system:Double x:Key="HeadlineMediumSize">20</system:Double>
    <system:Double x:Key="HeadlineSmallSize">18</system:Double>
    <system:Double x:Key="TitleLargeSize">16</system:Double>
    <system:Double x:Key="TitleMediumSize">15</system:Double>
    <system:Double x:Key="TitleSmallSize">14</system:Double>
    <system:Double x:Key="BodyLargeSize">16</system:Double>
    <system:Double x:Key="BodyMediumSize">14</system:Double>
    <system:Double x:Key="BodySmallSize">12</system:Double>
    <system:Double x:Key="LabelLargeSize">14</system:Double>
    <system:Double x:Key="LabelMediumSize">12</system:Double>
    <system:Double x:Key="LabelSmallSize">11</system:Double>
    
    <!-- Line Heights -->
    <system:Double x:Key="TightLineHeight">1.2</system:Double>
    <system:Double x:Key="DefaultLineHeight">1.5</system:Double>
    <system:Double x:Key="LooseLineHeight">1.8</system:Double>
    
    <!-- Text Styles -->
    <Style x:Key="DisplayLarge" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFontFamily}"/>
        <Setter Property="FontSize" Value="{StaticResource DisplayLargeSize}"/>
        <Setter Property="FontWeight" Value="Light"/>
        <Setter Property="LineHeight" Value="{StaticResource TightLineHeight}"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
    </Style>
    
    <Style x:Key="HeadlineMedium" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFontFamily}"/>
        <Setter Property="FontSize" Value="{StaticResource HeadlineMediumSize}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="LineHeight" Value="{StaticResource TightLineHeight}"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
    </Style>
    
    <Style x:Key="TitleLarge" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFontFamily}"/>
        <Setter Property="FontSize" Value="{StaticResource TitleLargeSize}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="LineHeight" Value="{StaticResource TightLineHeight}"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
    </Style>
    
    <Style x:Key="BodyLarge" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFontFamily}"/>
        <Setter Property="FontSize" Value="{StaticResource BodyLargeSize}"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="LineHeight" Value="{StaticResource DefaultLineHeight}"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
    </Style>
    
    <Style x:Key="BodyMedium" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFontFamily}"/>
        <Setter Property="FontSize" Value="{StaticResource BodyMediumSize}"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="LineHeight" Value="{StaticResource DefaultLineHeight}"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
    </Style>
    
    <Style x:Key="LabelMedium" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFontFamily}"/>
        <Setter Property="FontSize" Value="{StaticResource LabelMediumSize}"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="LineHeight" Value="{StaticResource TightLineHeight}"/>
        <Setter Property="Foreground" Value="{StaticResource SecondaryTextBrush}"/>
    </Style>
    
    <!-- Hebrew Text Styles -->
    <Style x:Key="HebrewTitleLarge" TargetType="TextBlock" BasedOn="{StaticResource TitleLarge}">
        <Setter Property="FontFamily" Value="{StaticResource HebrewFontFamily}"/>
        <Setter Property="FlowDirection" Value="RightToLeft"/>
    </Style>
    
    <Style x:Key="HebrewBodyMedium" TargetType="TextBlock" BasedOn="{StaticResource BodyMedium}">
        <Setter Property="FontFamily" Value="{StaticResource HebrewFontFamily}"/>
        <Setter Property="FlowDirection" Value="RightToLeft"/>
    </Style>
    
    <Style x:Key="HebrewLabelMedium" TargetType="TextBlock" BasedOn="{StaticResource LabelMedium}">
        <Setter Property="FontFamily" Value="{StaticResource HebrewFontFamily}"/>
        <Setter Property="FlowDirection" Value="RightToLeft"/>
    </Style>
    
</ResourceDictionary>

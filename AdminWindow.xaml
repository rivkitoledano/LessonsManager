<Window x:Class="LessonsManager.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="מסך מנהל" Height="800" Width="1400"
        WindowState="Maximized" WindowStyle="None"
        Background="#F5F1E8">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryBrown" Color="#6B4423"/>
        <SolidColorBrush x:Key="SecondaryBrown" Color="#8B5A3C"/>
        <SolidColorBrush x:Key="LightBrown" Color="#D4A574"/>
        <SolidColorBrush x:Key="HoverBrown" Color="#5A3618"/>

        <!-- Modern Button Style for Icon Buttons -->
        <Style x:Key="ModernIconButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Width" Value="36"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F0F0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Edit Button Style -->
        <Style x:Key="EditIconButton" TargetType="Button" BasedOn="{StaticResource ModernIconButton}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E3F2FD"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Delete Button Style -->
        <Style x:Key="DeleteIconButton" TargetType="Button" BasedOn="{StaticResource ModernIconButton}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFEBEE"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBrown}">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="2" 
                                BlurRadius="10" Opacity="0.2"/>
            </Border.Effect>
            <Grid Margin="30,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="BackButton"
                            Background="#8B4513"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="18,10"
                            Margin="0,0,20,0"
                            FontWeight="SemiBold"
                            FontSize="14"
                            Cursor="Hand"
                            Click="BackButton_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </Button.Resources>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ArrowRight" 
                                                   Width="18" Height="18" 
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,8,0"/>
                            <TextBlock Text="חזור" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <materialDesign:PackIcon Kind="ShieldAccount" 
                                           Width="28" Height="28"
                                           Foreground="White"
                                           VerticalAlignment="Center"
                                           Margin="0,0,12,0"/>
                    <TextBlock x:Name="HeaderTitle" Text="פאנל ניהול - ישיבת מהרי&quot;ל" 
                               FontSize="24" FontWeight="Bold" 
                               Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="AddLessonButton"
                            Background="#4CAF50"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="22,5"
                            Margin="0,0,10,0"
                            FontSize="15"
                            FontWeight="SemiBold"
                            Cursor="Hand"
                            Click="AddLessonButton_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </Button.Resources>
                        <Button.Effect>
                            <DropShadowEffect Color="#000000" Direction="270" 
                                            ShadowDepth="2" BlurRadius="8" Opacity="0.2"/>
                        </Button.Effect>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Plus" 
                                                   Width="20" Height="20" 
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,8,0"/>
                            <TextBlock Text="הוסף שיעור" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="PreviewButton"
                            Background="{StaticResource SecondaryBrown}"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="20,5"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Cursor="Hand"
                            Click="PreviewButton_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </Button.Resources>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Eye" 
                                                   Width="18" Height="18" 
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,8,0"/>
                            <TextBlock Text="תצוגה מקדימה" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1" x:Name="ContentArea">
            <!-- Lessons List (Default View) -->
            <Border x:Name="LessonsPanel" Background="White" Margin="40,30,40,20" CornerRadius="16">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="4" 
                                      BlurRadius="20" Opacity="0.08"/>
                </Border.Effect>
                <Grid Margin="35">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header Section -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="ניהול שיעורים קיימים" 
                                   FontSize="24" FontWeight="Bold" 
                                   Foreground="{StaticResource PrimaryBrown}" TextAlignment="Right" Width="1250"/>
                    </StackPanel>

                    <TextBlock Grid.Row="1" 
                               Text="רשימת כל השיעורים במערכת • לחץ על הכפתורים לעריכה או מחיקה"
                               FontSize="13"
                               Foreground="#666"
                               Margin="0,0,0,20" TextAlignment="Right"/>

                    <!-- Enhanced Lessons List -->
                    <ScrollViewer Grid.Row="2" 
                                VerticalScrollBarVisibility="Auto"
                                HorizontalScrollBarVisibility="Disabled">
                        <ListView x:Name="LessonsListView" 
                                  SelectionMode="Single"
                                  BorderThickness="0"
                                  Background="Transparent">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="Margin" Value="0,0,0,12"/>
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListViewItem">
                                                <ContentPresenter/>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="White" 
                                            BorderBrush="#E0E0E0"
                                            BorderThickness="1"
                                            CornerRadius="12" 
                                            Padding="20">
                                        <Border.Effect>
                                            <DropShadowEffect Color="#000000" Direction="270" 
                                                            ShadowDepth="2" BlurRadius="10" Opacity="0.05"/>
                                        </Border.Effect>
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#FAFAFA"/>
                                                        <Setter Property="BorderBrush" Value="{StaticResource LightBrown}"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>

                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Icon -->
                                            <Border Grid.Column="0"
                                                    Background="#FFF3E0"
                                                    CornerRadius="10"
                                                    Width="48" Height="48"
                                                    VerticalAlignment="Center"
                                                    Margin="0,0,18,0">
                                                <materialDesign:PackIcon Kind="Headphones" 
                                                                        Width="26" Height="26"
                                                                        Foreground="{StaticResource SecondaryBrown}"
                                                                        HorizontalAlignment="Center"
                                                                        VerticalAlignment="Center"/>
                                            </Border>

                                            <!-- Content -->
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                                    <TextBlock Text="{Binding Title}" 
                                                              FontWeight="SemiBold" 
                                                              FontSize="16"
                                                              Foreground="#212121"
                                                              VerticalAlignment="Center"/>
                                                    <!-- PDF Badge -->
                                                    <Border Background="#FF5722"
                                                            CornerRadius="4"
                                                            Padding="6,2"
                                                            Margin="10,0,0,0"
                                                            VerticalAlignment="Center"
                                                            Visibility="{Binding HasPdf, Converter={StaticResource BoolToVisibilityConverter}}">
                                                        <StackPanel Orientation="Horizontal">
                                                            <materialDesign:PackIcon Kind="FilePdfBox" 
                                                                                   Width="12" Height="12"
                                                                                   Foreground="White"
                                                                                   VerticalAlignment="Center"
                                                                                   Margin="0,0,4,0"/>
                                                            <TextBlock Text="PDF" 
                                                                      FontSize="10"
                                                                      FontWeight="Bold"
                                                                      Foreground="White"
                                                                      VerticalAlignment="Center"/>
                                                        </StackPanel>
                                                    </Border>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal">
                                                    <Border Background="#E8F5E9"
                                                            CornerRadius="4"
                                                            Padding="8,3"
                                                            Margin="0,0,8,0">
                                                        <TextBlock Text="{Binding Subject}" 
                                                                  FontSize="12"
                                                                  FontWeight="Medium"
                                                                  Foreground="#2E7D32"/>
                                                    </Border>
                                                    <Border Background="#E3F2FD"
                                                            CornerRadius="4"
                                                            Padding="8,3"
                                                            Margin="0,0,8,0">
                                                        <TextBlock Text="{Binding SubSubject}" 
                                                                  FontSize="12"
                                                                  FontWeight="Medium"
                                                                  Foreground="#1565C0"/>
                                                    </Border>
                                                    <Border Background="#FFF3E0"
                                                            CornerRadius="4"
                                                            Padding="8,3">
                                                        <TextBlock Text="{Binding Year}" 
                                                                  FontSize="12"
                                                                  FontWeight="Medium"
                                                                  Foreground="#E65100"/>
                                                    </Border>
                                                </StackPanel>
                                            </StackPanel>

                                            <!-- Action Buttons -->
                                            <StackPanel Grid.Column="2" 
                                                       Orientation="Horizontal"
                                                       VerticalAlignment="Center"
                                                       Margin="10,0,0,0">
                                                <Button Style="{StaticResource EditIconButton}"
                                                       Click="EditButton_Click"
                                                       Tag="{Binding}"
                                                       ToolTip="ערוך שיעור"
                                                       Margin="0,0,8,0">
                                                    <materialDesign:PackIcon Kind="Pencil" 
                                                                           Width="20" Height="20"
                                                                           Foreground="#1976D2"/>
                                                </Button>
                                                <Button Style="{StaticResource DeleteIconButton}"
                                                       Click="DeleteButton_Click"
                                                       Tag="{Binding}"
                                                       ToolTip="מחק שיעור">
                                                    <materialDesign:PackIcon Kind="Delete" 
                                                                           Width="20" Height="20"
                                                                           Foreground="#D32F2F"/>
                                                </Button>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Student Preview Panel (Hidden by default) -->
            <Border x:Name="PreviewPanel" 
                    Visibility="Collapsed" 
                    Background="White" 
                    Margin="40,30,40,20" 
                    CornerRadius="16">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="4" 
                                      BlurRadius="20" Opacity="0.08"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Preview Header -->
                    <Border Grid.Row="0" 
                            Background="{StaticResource SecondaryBrown}" 
                            CornerRadius="16,16,0,0"
                            Padding="25,18">
                        <Border.Effect>
                            <DropShadowEffect Color="#000000" Direction="270" 
                                            ShadowDepth="2" BlurRadius="8" Opacity="0.15"/>
                        </Border.Effect>
                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="ClosePreviewButton"
                                    Background="Transparent"
                                    Foreground="White"
                                    BorderThickness="1.5"
                                    BorderBrush="White"
                                    Padding="16,8"
                                    FontWeight="SemiBold"
                                    FontSize="14"
                                    Cursor="Hand"
                                    Click="ClosePreviewButton_Click">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="6"/>
                                    </Style>
                                </Button.Resources>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="ArrowRight" 
                                                           Width="16" Height="16" 
                                                           VerticalAlignment="Center"
                                                           Margin="0,0,6,0"/>
                                    <TextBlock Text="חזור לניהול" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <materialDesign:PackIcon Kind="Eye" 
                                                   Width="24" Height="24"
                                                   Foreground="White"
                                                   VerticalAlignment="Center"
                                                   Margin="20,0,10,0"/>
                            <TextBlock Text="תצוגה מקדימה - מסך תלמידים"
                                      FontSize="18"
                                      FontWeight="SemiBold"
                                      Foreground="White"
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Preview Content Container -->
                    <Border Grid.Row="1" 
                            Background="#F5F5F5"
                            Padding="15">
                        <Border x:Name="StudentPreviewContainer" 
                                Background="White"
                                CornerRadius="8">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" Direction="270" 
                                                ShadowDepth="2" BlurRadius="8" Opacity="0.08"/>
                            </Border.Effect>
                        </Border>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#ECF0F1">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Direction="90" ShadowDepth="1" 
                                BlurRadius="5" Opacity="0.1"/>
            </Border.Effect>
            <StackPanel Orientation="Horizontal" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center">
                <materialDesign:PackIcon Kind="Information" 
                                       Width="16" Height="16"
                                       Foreground="#7F8C8D"
                                       VerticalAlignment="Center"
                                       Margin="0,0,8,0"/>
                <TextBlock Text="כל השיעורים נשמרים באופן מקומי במחשב • ניתן לערוך ולמחוק שיעורים בכל עת" 
                           FontSize="12" 
                           Foreground="#7F8C8D" 
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Snackbar for notifications -->
        <materialDesign:Snackbar x:Name="AdminSnackbar" 
                               MessageQueue="{materialDesign:MessageQueue}"
                               Margin="0,0,0,80"
                               VerticalAlignment="Bottom"
                               HorizontalAlignment="Center"/>
    </Grid>
</Window>